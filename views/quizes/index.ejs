<table>
	<% var i; for (i=0; i < quizzes.length; i++) { %>        
    	<tr>
    		<td><a href="/quizes/<%=quizzes[i].id%>"><%= quizzes[i].pregunta %></a></td>
    		<td><a href="/quizes/<%=quizzes[i].id %>/edit"><button>editar</button></a></td>
    		<td>
          		<form method="post" action="/quizes/<%= quizzes[i].id %>?_method=delete">
            		<button type="submit" onClick="return confirm('Borrar: <%= quizzes[i].pregunta %>');">
              		borrar
            		</button>
          		</form>
        	</td>
      	</tr>
    <% } %>
    <tr>
    	<td><a href="/quizes/new">Crear Pregunta</a></td>
    </tr>
</table>